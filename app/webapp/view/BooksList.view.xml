<mvc:View
	controllerName="sap.ui.demo.bookshop.controller.BooksList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table
		id="bookList"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{
			path : 'books>/Books'
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>booksListTitle}"/>
				<ToolbarSpacer/>
				<SearchField width="50%" search=".onFilterBooks"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="{i18n>columnBookName}"/>
			</Column>
			<Column
				minScreenWidth="Small"
				demandPopin="true">
				<Text text="{i18n>columnAuthorName}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="false">
				<Text text="{i18n>columnStock}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem
				type="Navigation"
				press=".onPress">
				<cells>
					<ObjectIdentifier title="{books>BookName}"/>
					<Text text="{books>AuthorName}"/>
					<Text text="{books>Stock}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>